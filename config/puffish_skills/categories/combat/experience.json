{
	"experience_per_level": {
		"type": "expression",
		"data": {
			"expression": "10 + (level ^ 2 * 5.65)"
		}
	},
	"sources": [
		{
			"type": "puffish_skills:kill_entity",
			"data": {
				"variables": {
					"max_health": {
						"operations": [
							{
								"type": "get_killed_living_entity"
							},
							{ 
								"type": "get_max_health"
							}
						]
					},
					"max_armor": {
                        "operations": [
                            {
                                "type": "get_killed_living_entity"
                            },
                            { 
                                "type": "puffish_skills:get_attribute",
                                "data": {
                                    "attribute": "generic.armor"
                                }
                            },
                            { 
                                "type": "get_value"
                            }
                        ]
                    },
					"is_xpmob": {
						"operations": [
							{
								"type": "get_killed_living_entity"
							},
							{
								"type": "get_type"
							},
							{ 
								"type": "puffish_skills:test",
								"data": {
									"entity_type": "#forge:xpmobs"
								}
							},
							{
								"type": "switch",
								"data": {
									"true": 1,
									"false": 0
								}
							}
						]
					},
					"is_melee": {
						"operations": [
							{
								"type": "get_damage_source"
							},
							{ 
								"type": "puffish_skills:is_melee"
							},
							{
								"type": "switch",
								"data": {
									"true": 1,
									"false": 0
								}
							}
						]
					}
				},
				"experience": "(max_health / 10) * max(max_armor / 10, 1) * is_xpmob * is_melee",
				"anti_farming": {
					"limit_per_chunk": 50,
					"reset_after_seconds": 120
				}
			}
		}
	]
}